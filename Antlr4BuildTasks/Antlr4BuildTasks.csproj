<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.5</TargetFrameworks>
    <EnableDefaultNoneItems>False</EnableDefaultNoneItems>

    <RootNamespace>Antlr4.Build.Tasks</RootNamespace>
    <AssemblyName>Antlr4BuildTasks</AssemblyName>

    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <InformationalVersion>4.6.6-dev</InformationalVersion>
    <Description>Derivative of Hartwell's Antrl4cs: contains "ITask" wrapper for Msbuild, schemas for setting Antlr4 file properties, and a separately installed official Antlr4 java tool at antlr.org downloads.</Description>
    <Copyright></Copyright>
    <Company>Domemtech</Company>
    <AssemblyTitle>Antlr4BuildTasks</AssemblyTitle>
    <ContentTargetFolders>build/</ContentTargetFolders>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <CodeAnalysisRuleSet>ExtendedDesignGuidelineRules.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(TargetFramework)' == 'netstandard1.5'">
      <ItemGroup>
        <PackageReference Include="Microsoft.Build.Framework" Version="14.3" />
        <PackageReference Include="Microsoft.Build.Tasks.Core" Version="14.3" />
      </ItemGroup>
      <PropertyGroup>
        <DefineConstants>$(DefineConstants);NETSTANDARD</DefineConstants>
      </PropertyGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'net40'">
      <ItemGroup>
        <Reference Include="Microsoft.Build.Framework" />
        <Reference Include="Microsoft.Build.Tasks.v4.0" />
        <Reference Include="Microsoft.Build.Utilities.v4.0" />
      </ItemGroup>
    </When>
  </Choose>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseUrl>https://raw.githubusercontent.com/kaby76/antlr4cs/master/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/kaby76/antlr4cs</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kaby76/antlr4cs</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageIconUrl>https://raw.github.com/antlr/website-antlr4/master/images/icons/antlr.png</PackageIconUrl>
    <PackageTags>antlr antlr4 parsing</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>1.0.1</Version>
    <Authors>Ken Domino</Authors>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Antlr4BuildTasksSchema.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Antlr4BuildTasks.DefaultItems.props" />
    <Content Include="Antlr4BuildTasks.DefaultItems.targets" />
    <Content Include="Antlr4.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Antlr4BuildTasks.props">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Antlr4BuildTasks.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <CodeAnalysisDictionary Include="..\build\CustomDictionary.xml">
      <Link>CustomDictionary.xml</Link>
    </CodeAnalysisDictionary>
  </ItemGroup>
  
</Project>